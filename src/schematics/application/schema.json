{
  "$schema": "http://json-schema.org/schema",
  "id": "ngtron-generate",
  "title": "NGTron application schematic",
  "type": "object",
  "properties": {
    "singleProject": {
      "type": "boolean",
      "default": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "x-prompt": "What name should your project have?"
    },
    "rendererPrefix": {
      "type": "string",
      "default": "-renderer"
    },
    "mainPrefix": {
      "type": "string",
      "default": "-main"
    },
    "electronPrefix": {
      "type": "string",
      "default": "-electron"
    }
  },
  "required": [],
  "additionalProperties": false
}
