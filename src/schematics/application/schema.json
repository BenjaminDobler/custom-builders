{
  "$schema": "http://json-schema.org/schema",
  "id": "ngtron-generate",
  "title": "NGTron application schematic",
  "type": "object",
  "properties": {
    "singleProject": {
      "type": "boolean",
      "default": false
    },
    "rendererPrefix": {
      "type": "string",
      "default": "-renderer"
    },
    "mainPrefix": {
      "type": "string",
      "default": "-main"
    },
    "electronPrefix": {
      "type": "string",
      "default": "-electron"
    },
    "name": {
      "description": "the base name of the project",
      "type": "string"
    },
    "project": {
      "description": "the name of the angular renderer project which where electron should be added to",
      "type": "string"
    }
  },
  "required": [],
  "additionalProperties": false
}
